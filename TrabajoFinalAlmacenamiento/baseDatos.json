use sistemaAcademico;

db.createCollection("evento", {
    "capped": false,
    "validator": {
        "$jsonSchema": {
            "bsonType": "object",
            "title": "evento",
            "properties": {
                "_id": {
                    "bsonType": "objectId"
                },
                "nombre": {
                    "bsonType": "string"
                },
                "estado": {
                    "bsonType": "string",
                    "enum": [
                        "registrado",
                        "enRevision",
                        "aprovado"
                    ]
                },
                "tipo": {
                    "bsonType": "string",
                    "enum": [
                        "ludico",
                        "academico"
                    ]
                },
                "realizacion": {
                    "bsonType": "object",
                    "properties": {
                        "instalaciones": {
                            "bsonType": "array",
                            "additionalItems": true,
                            "items": {
                                "bsonType": "object",
                                "properties": {
                                    "instalacionId": {
                                        "bsonType": "string"
                                    }
                                },
                                "additionalProperties": false,
                                "required": [
                                    "instalacionId"
                                ]
                            }
                        },
                        "fecha": {
                            "bsonType": "date"
                        },
                        "horaInicio": {
                            "bsonType": "string"
                        },
                        "horaFin": {
                            "bsonType": "string"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "instalaciones",
                        "fecha",
                        "horaInicio",
                        "horaFin"
                    ]
                },
                "organizador": {
                    "bsonType": "array",
                    "additionalItems": true,
                    "items": {
                        "bsonType": "object",
                        "properties": {
                            "usuarioId": {
                                "bsonType": "int",
                                "description": "El ID debe ser de estudiante o docente"
                            },
                            "tipoUsuario": {
                                "bsonType": "string",
                                "enum": [
                                    "estudiante",
                                    "docente"
                                ]
                            },
                            "avalPDF": {
                                "bsonType": "binData"
                            },
                            "tipoAval": {
                                "bsonType": "string",
                                "enum": [
                                    "directorPrograma",
                                    "directorDocencia"
                                ]
                            },
                            "principal": {
                                "bsonType": "string"
                            }
                        },
                        "additionalProperties": false,
                        "required": [
                            "usuarioId",
                            "tipoUsuario",
                            "avalPDF",
                            "tipoAval",
                            "principal"
                        ]
                    }
                },
                "organizacion": {
                    "bsonType": "array",
                    "additionalItems": true,
                    "items": {
                        "bsonType": "object",
                        "properties": {
                            "organizacionId": {
                                "bsonType": "objectId"
                            },
                            "participante": {
                                "bsonType": "string"
                            },
                            "esRepresentanteLegal": {
                                "bsonType": "string",
                                "enum": [
                                    "si",
                                    "no"
                                ]
                            },
                            "certificadoParticipacion": {
                                "bsonType": "binData"
                            }
                        },
                        "additionalProperties": false,
                        "required": [
                            "organizacionId",
                            "participante",
                            "esRepresentanteLegal",
                            "certificadoParticipacion"
                        ]
                    }
                }
            },
            "additionalProperties": true,
            "required": [
                "_id",
                "nombre",
                "estado",
                "tipo",
                "realizacion",
                "organizador"
            ]
        }
    },
    "validationLevel": "moderate",
    "validationAction": "error"
});

db.createCollection("instalacion", {
    "capped": false,
    "validator": {
        "$jsonSchema": {
            "bsonType": "object",
            "title": "instalacion",
            "properties": {
                "_id": {
                    "bsonType": "string"
                },
                "ubicacion": {
                    "bsonType": "string"
                },
                "tipo": {
                    "bsonType": "string",
                    "enum": [
                        "salon",
                        "auditorio",
                        "laboratorio",
                        "cancha"
                    ]
                },
                "capacidad": {
                    "bsonType": "int"
                }
            },
            "additionalProperties": true,
            "required": [
                "_id",
                "ubicacion",
                "tipo",
                "capacidad"
            ]
        }
    },
    "validationLevel": "moderate",
    "validationAction": "error"
});

db.createCollection("usuario", {
    "capped": false,
    "validator": {
        "$jsonSchema": {
        "bsonType": "object",
        "title": "usuario",
        "properties": {
            "_id": { "bsonType": "int" },
            "nombre": { "bsonType": "string" },
            "apellidos": { "bsonType": "string" },
            "email": { "bsonType": "string" },
            "telefonos": {
            "bsonType": "array",
            "additionalItems": true,
            "items": { "bsonType": "string" }
            },
            "password": {
            "bsonType": "object",
            "properties": {
                "clave": { "bsonType": "string" },
                "fechaCambio": { "bsonType": "date" },
                "estado": { "bsonType": "string", "enum": ["activa","inactiva"] }
            },
            "additionalProperties": false,
            "required": ["clave","fechaCambio","estado"]
            },
            "rol": {
            "bsonType": "string",
            "enum": ["estudiante","docente","secretariaAcademica"]
            },
            "datos": {
            "bsonType": "object",
            "additionalProperties": true
            }
        },
        "additionalProperties": true,
        "required": [
            "_id",
            "nombre",
            "apellidos",
            "email",
            "telefonos",
            "password",
            "rol"
        ],
        "oneOf": [
            {
            "properties": {
                "rol": { "enum": ["estudiante"] },
                "datos": {
                "bsonType": "object",
                "properties": {
                    "programaId": { "bsonType": "objectId" } // << antes estaba "int"
                },
                "required": ["programaId"]
                }
            }
            },
            {
            "properties": {
                "rol": { "enum": ["docente"] },
                "datos": {
                "bsonType": "object",
                "properties": {
                    "unidadAcademicaId": { "bsonType": "objectId" } // << antes "int"
                },
                "required": ["unidadAcademicaId"]
                }
            }
            },
            {
            "properties": {
                "rol": { "enum": ["secretariaAcademica"] },
                "datos": {
                "bsonType": "object",
                "properties": {
                    "facultadId": { "bsonType": "objectId" } // << antes "int"
                },
                "required": ["facultadId"]
                }
            }
            }
        ]
        }
    },
    "validationLevel": "moderate",
    "validationAction": "error"
});

